{{>layout/header}}

<h1><a href="/" id="title">디디 게시판</a></h1>
<div class="col-md-12">
    <div class="row">
        <div class="col-md-6">
            <a href="/post/save" role="button" class="btn btn-primary">글 등록</a>
        </div>
    </div>
    <br>
    <!--    목록 출력 영역-->
    <table class="table table-horizontal table-bordered">
        <thead class="thead-strong">
        <tr>
            <th>no</th>
            <th>제목</th>
            <th>닉네임</th>
            <th>작성날짜</th>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#articles}}
            <tr>
                <td>{{id}}</td>
                <td><a href="/post/{{id}}">{{title}}</a></td>
                <td>{{nickName}}</td>
                <td>{{createdDate}}</td>
            </tr>
        {{/articles}}
        </tbody>
    </table>
</div>
{{>layout/footer}}